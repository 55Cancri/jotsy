{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "outDir": "dist",
    "rootDir": "src",
    "allowJs": true,
    "strict": true,
    "declaration": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["node_modules/@types", "src/jotsy"]
  },
  // "files": ["src/types/index.d.ts"],
  // "include": ["src"],
  "exclude": ["coverage", "miscellaneous", "quokka", "**/tests/*"]
  // "exclude": ["node_modules", "coverage", "**/tests/*"]
}
