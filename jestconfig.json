{
  "roots": ["<rootDir>"],
  "transform": {
    "^.+\\.tsx?$": "ts-jest"
  },
  "testMatch": ["tests/*.test.ts"],
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
  "globals": {
    "ts-jest": {
      "diagnostics": {
        "warnOnly": true
      }
    },
    "testEnvironment": "node"
  }
}
